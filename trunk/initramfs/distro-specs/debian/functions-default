\t        FontPath\t\t    "/usr/share/X11/fonts/100dpi"\n
\t        FontPath\t\t    "/usr/share/X11/fonts/75dpi"\n
'
Module=' \t        Load\t           "i2c"\n
\t        Load\t            "bitmap"\n
\t        Load\t            "ddc"\n
\t        Load\t            "dri"\n
\t        Load\t            "extmod"\n
\t        Load\t            "freetype"\n
\t        Load\t            "glx"\n
